<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

         <record id="view_out_invoice_tree" model="ir.ui.view">
            <field name="name">account.out.invoice.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="has_payment_token"/>
                </xpath>
            </field>
        </record>

        <record id="sale_order_tree" model="ir.ui.view">
            <field name="name">amazon.order.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.sale_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="has_payment_token"/>
                </xpath>
            </field>
        </record>
        <record id="view_quant_package_weight_form" model="ir.ui.view">
            <field name="name">stock.quant.package.weight.form</field>
            <field name="model">stock.quant.package</field>
            <field name="inherit_id" ref="stock.view_quant_package_form"/>
            <field name="arch" type="xml">
                <field name="pack_date" position="before">
                    <field name="tacking_number"/>
                </field>
            </field>
        </record>

        <record id="so_template_view" model="ir.ui.view">
            <field name="name">So Template</field>
            <field name="model">so.template</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="e.g. Message"/>
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <field name="line_ids">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="quantity"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_so_template">
            <field name="name">SO Template</field>
            <field name="res_model">so.template</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem name="SO Template"
                  id="sale_so_template"
                  parent="sale.menu_sale_config"
                  action="action_so_template"
        />
    </data>
</odoo>