<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="so_template_view" model="ir.ui.view">
            <field name="name">So Template</field>
            <field name="model">so.template</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="e.g. Message"/>
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <field name="line_ids">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="quantity"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_so_template">
            <field name="name">SO Template</field>
            <field name="res_model">so.template</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem name="SO Template"
                  id="sale_so_template"
                  parent="sale.menu_sale_config"
                  action="action_so_template"
        />
    </data>
</odoo>