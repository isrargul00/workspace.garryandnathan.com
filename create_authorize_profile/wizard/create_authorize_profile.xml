<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="authorize_customer_profile_wizard" model="ir.ui.view">
        <field name="name">Authorize Customer Profile Wizard</field>
        <field name="model">create.authorize.profile.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="New Customer Profile">
                <sheet>
                    <group>
                        <group>
                            <field name="payment_type" required="1"/>
                            <field name="payment_method_id" required="1"/>
                        </group>
                        <group>
                        </group>
                        <!--                        <group string="Billing Information">-->
                        <!--                            <field name="email"/>-->
                        <!--                            <field name="first_name" required="1"/>-->
                        <!--                            <field name="last_name" required="1"/>-->
                        <!--                            <field name="phone" required="1"/>-->
                        <!--                            <field name="street" required="1"/>-->
                        <!--                            <field name="city" required="1"/>-->
                        <!--                            <field name="state" required="1"/>-->
                        <!--                            <field name="zip" required="1"/>-->
                        <!--                            <field name="country" required="1"/>-->
                        <!--                        </group>-->
                        <group string="Card Information" invisible="payment_type != 'creditCard'">
                            <field name="cc_number" required="payment_type != 'creditCard'"/>
                            <field name="expiration_date" placeholder="Must be in format YYYY-MM"
                                   invisible="1"/>
                            <label for="month" string="Expiration Date"/>
                            <label for="month" string="Expiration Date"/>
                            <div>
                                <label for="month" string="Month"/>
                                <field name="month" required="payment_type == 'creditCard' "
                                       class="oe_inline" style="width:110%%"/>
                                <label for="year" string="Year"/>
                                <field name="year" required="payment_type == 'creditCard' "

                                       class="oe_inline"/>
                            </div>
                            <field name="card_code" required="1"/>
                        </group>
                        <group string="Account Information" invisible="payment_type != 'bankAccount'">
                            <field name="bank_name" required="payment_type == 'bankAccount'"/>
                            <field name="account_number" required="payment_type == 'bankAccount'"/>
                            <field name="routing_number" required="payment_type == 'bankAccount'"/>
                            <field name="name_on_account" required="payment_type == 'bankAccount'"/>
                            <field name="account_type" required="payment_type == 'bankAccount'"/>
                        </group>
                        <group string="Important: Be sure to ensure billing zip code is correct!" colspan="4"
                               invisible="payment_type == False">
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Create" type="object" class="oe_highlight" name="create_customer_profile"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


</odoo>
